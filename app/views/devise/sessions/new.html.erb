<div class="flex flex-col mx-auto w-2/5">
  <h2 class="text-4xl antialiased mb-4">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {'data-turbo' => "false"}) do |f| %>
    <div>
      <div class="field">
        <%= f.label :email, class: 'form-label' %><br />
        <%= f.email_field :email, autofocus: true, class:'form-input' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'form-label' %><br />
        <%= f.password_field :password, class:'form-input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-primary mb-2' %>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
